generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  todo
  doing
  done
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  task  Task[]

  @@map("users")
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String
  created_at  DateTime   @default(now())
  updated_at  DateTime   @default(now())
  status      TodoStatus
  userId      String
  user        User       @relation(fields: [userId], references: [id])

  @@map("tasks")
}
